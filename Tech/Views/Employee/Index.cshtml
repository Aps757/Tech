@model IEnumerable<Tech.DAL.Employee>

<style>
    table.table-bordered {
        border: 2px solid #db6f6f;
    }

    
    input.form-control {
        width: 25vw;
    }

    
    .btn-create {
        background-color: #28a745;
        color: #fff;
        border: none;
    }

 
    .top-section {
        text-align: center;
        padding: 20px;
    }

   
    .search-input {
        display: inline-block;
    }

    
    .btn-search {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: border-color 0.15s ease-in-out,box-shadow 0.15s ease-in-out;
    }

    
</style>

<div class="top-section">
    <h2>Employee List</h2>

    <form asp-action="Index" method="get">
        <p class="search-input">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by name or description" class="form-control text-center" />
            <div>
                <button type="submit" class="btn btn-search btn-danger ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                    </svg> Search
                </button>
            </div>
        </p>
    </form>
</div>

<p>
    <a asp-action="Create" class="btn btn-create">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M7.5 0a.5.5 0 0 1 1 0v7h7a.5.5 0 0 1 0 1h-7v7a.5.5 0 0 1-1 0v-7H.5a.5.5 0 0 1 0-1h7v-7z" />
        </svg> Create New
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-success text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="20" fill="green" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M14.742 0.742a2 2 0 0 0-2.828 0L1.343 12.95a1 1 0 0 0-.266.465l-1 3.986a1 1 0 0 0 1.232 1.232l3.985-1a1 1 0 0 0 .465-.266l12.208-12.207a2 2 0 0 0 0-2.828l-1.414-1.414zM3.707 12.95L12 4.657l1.95 1.95L5.657 14H3v-2.657l1.707-1.707zM14 3l1-1v3h-3L9 4l7-7 1 1z" />
                        </svg> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link text-danger text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

